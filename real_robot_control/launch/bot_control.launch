<launch>
    <arg name="model" default="$(find real_robot_description)/urdf/real_robot.gazebo.xacro"/>

    <rosparam command="load"
              file="$(find bot_control)/config/joints.yaml"
              ns="joint_state_controller" />

   <rosparam command="load"
              file="$(find bot_control)/config/diff_drive.yaml"
              ns="bot_velocity_controller" />



    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/real_robot" args="bot_velocity_controller joint_state_controller"/>

    
</launch>
